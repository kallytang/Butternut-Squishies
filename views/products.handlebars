<html>
  <head>

    <meta charset="utf-8">
    <title>Butternut Squishies Grocery Store</title>
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="departments.css">
    <link href='https://fonts.googleapis.com/css?family=Calligraffitti' rel='stylesheet'>

  </head>
  <body>
    
    <h1 class ="storeTitle" >Butternut Squishies Grocery Store</h1>
        <li class="registerButtonSection" ><a class="register" href="register.html">Register</a></li>
    <ul class="nav">
        <li><a class="tab" href="home.html">Home</a></li>
        <li><a class="active tab" href="departments.html">Departments</a></li>
        <li><a class="tab" href="account.html">Account</a></li>
        <li><a class="tab" href="admin.html">Admin</a></li>
        <li><a class ="checkoutBox" href="checkout.html">Check Out</a></li>
    </ul>

    <h1>{{departments.name}}</h1>
        


    <div class="departmentList">
        <h2 class="departHeader">
            
        </h2>
        <div class="searchForm">
         <form class= "customerFormUpdate">
          <h12 class="title" >To search for a product, type here:</h2>
          <input class="search-container" type="text" placeholder="" name="search">
          <input class="search-container" type ="submit" value="Search">
        </form>
        </div>
    </div>
    <br>

<h1>{{departmentName}}</h1>
<table>
<tbody>
<tr>
 <th class="thead">Product Name:</th>
 <th class="thead">Description:</th>
 <th class="thead">Price:</th>
 <th class="thead">Quantity:</th>
 <th class="thead">Add to Cart</th>
</tr>

{{#each products}}
        <tr>
                <td class="itemsbox imagesec">
                    <p class="prodName">{{name}}</p>
                     <img class="prodImage" src="images/apple.jpg">   
                </td>
                <td class="itemsbox description">
                <p>{{description}}</p>
                </td>
                <td class="itemsbox priceInfo">
                <p>{{price}}</p>
                <p class="limit"></p>
                <p></p>
                </td>
                <td class="itemsbox quantity">
                    <form method="post">
                    <input class="quantityBox" type="number" name="points" step="1">
                    </form>
                </td>
                <td class="itemsbox submitButton">
                   <button type="submit" form="form1" class="add" value="addToCart">Add to cart</button>
                </td>
            </tr>
{{/each}}
</tbody>
</table>

    

  </body>
</html>